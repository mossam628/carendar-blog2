!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title CarendarBlog2
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    %link{:href => "fullcalendar/fullcalendar.css", :rel => "stylesheet"}/
    %script{:src => "fullcalendar/lib/jquery.min.js"}
    %script{:src => "fullcalendar/lib/moment.min.js"}
    %script{:src => "fullcalendar/fullcalendar.js"}
    %script{:src => "locale/ja.js"}
  %body{"data-turbolinks" => "false"}
    %header.header
      .header__title
        = link_to "Pet Blog", root_path, class: "header__title--text"
      .header__right
        - if user_signed_in?
          = link_to "carendar", calender_index_path, class: "header__right--btn"
          = link_to current_user.nickname, user_path(current_user), class: "header__right--btn"
          = link_to "新規投稿", new_post_path, class: "header__right--btn"
          = link_to "ログアウト", destroy_user_session_path, method: :delete, class: "header__right--btn"
        - else
          = link_to "ログイン", new_user_session_path, class: "header__right--btn"
          = link_to "新規登録", new_user_registration_path, class: "header__right--btn"
    .contents
      = yield
